# Настройки ИИ генератора капсул
# Варианты: ollama, huggingface, semantic
AI_GENERATOR_TYPE=ollama

# Настройки Ollama
AI_MODEL_NAME=llama2:7b
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30

# Настройки Hugging Face
HF_USE_GPU=true
HF_MODEL_NAME=microsoft/DialoGPT-medium

# Настройки семантического поиска
SEMANTIC_MODEL_NAME=all-MiniLM-L6-v2

# Fallback настройки
USE_FALLBACK_GENERATION=true

# Логирование
LOG_LEVEL=INFO
LOG_FILE=ai_capsules.log

# Кэширование
ENABLE_CACHE=true
CACHE_TTL=3600

# Производительность
MAX_WARDROBE_ITEMS=50
MAX_CAPSULES_PER_CATEGORY=8

# Supabase (для подмешивания товаров брендов)
SUPABASE_URL=https://lipolo.store
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE 